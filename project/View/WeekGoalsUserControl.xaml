<UserControl x:Class="project.View.WeekGoalsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:project.View"
              xmlns:VM="clr-namespace:project.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="600">
    <Grid x:Name="myGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="210*"/>
            <RowDefinition Height="250*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="11*"/>
                <RowDefinition Height="38*"/>
                <RowDefinition Height="208*"/>
                <RowDefinition Height="20*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="225*"/>
                    <ColumnDefinition Width="200*"/>
                    <ColumnDefinition Width="200*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="1" Content="Choose a Week:" FontSize="18" FontWeight="Bold"/>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90*"/>
                    <ColumnDefinition Width="100*"/>
                    <ColumnDefinition Width="100*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="25*"/>
                </Grid.RowDefinitions>
                <local:WeekPicker Grid.Column="1" Grid.Row="1" SundayProperty="{Binding SundayProperty, Mode=OneWayToSource}"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="145*"/>
                <ColumnDefinition Width="411*"/>
            </Grid.ColumnDefinitions>
          <!--  <Image Grid.Column="1" Source="/images/foodLogo1.png"/>-->
        </Grid>
        <Grid Grid.Row="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="45*"/>
                <ColumnDefinition Width="90*"/>
                <ColumnDefinition Width="328*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="0.25*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="0.25*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="0.25*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="0.25*"/>
                </Grid.RowDefinitions>
                <local:MySliderUserControl Grid.Row="0" StringValueProperty="{Binding CaloriesProperty, Mode=TwoWay}"  />
                <local:MySliderUserControl Grid.Row="2" StringValueProperty="{Binding FatsProperty, Mode=TwoWay}"/>
                <local:MySliderUserControl Grid.Row="4" StringValueProperty="{Binding ProteinsProperty, Mode=TwoWay}"/>
                <local:MySliderUserControl Grid.Row="6" StringValueProperty="{Binding CarbsProperty, Mode=TwoWay}"/>
            </Grid>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="50*"/>
                </Grid.RowDefinitions>
                <Label Content="Calories:" Grid.Row="0" FontSize="16"/>
                <Label Content="Fats:" Grid.Row="2"  FontSize="16"/>
                <Label Content="Proteins:" Grid.Row="4"  FontSize="16"/>
                <Label Content="Carbohydrates:" Grid.Row="6" FontSize="16" />

            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="50*"/>
                </Grid.RowDefinitions>
                <Image Grid.Row="0" Source="/images/food.png"/>
                <Image Grid.Row="2" Source="/images/sunflower-oil.png"/>
                <Image Grid.Row="4" Source="/images/fried-egg.png"/>
                <Image Grid.Row="6"  Source="/images/sandwich.png" />
            </Grid>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="182*"/>
                <ColumnDefinition Width="75*"/>
                <ColumnDefinition Width="43*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="buttonSetGoals" Content="Set Goals" Grid.Column="1" Grid.Row="1" FontSize="20" Background="{ StaticResource PrimaryHueMidBrush }" FontWeight="Bold" BorderBrush="#FF7D7575" Margin="15,0,15,0" Command="{Binding SetGoalsCommand}" CommandParameter="{Binding}" Cursor="Hand">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers >
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsEnabledProperty }" Value="false" />
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Button.IsEnabled" Value="false"/>
                                <Setter Property="Button.Foreground" Value="{StaticResource PrimaryHueLightBrush}"/>
                            </MultiDataTrigger>
                          
                        </Style.Triggers>
                    </Style>
                </Button.Style>

            </Button>
            <Popup Visibility="Visible" Placement="MousePoint" HorizontalAlignment="Center" IsOpen="{Binding IsOpenSaveGoalsProperty}" Height="20" Width="100"  >
                <Border BorderBrush="Gray" BorderThickness="1">
                    <StackPanel Background="LightGray" >
                        <TextBlock HorizontalAlignment="Center" Text="The Goals Saved" />
                    </StackPanel>
                </Border>
            </Popup>
        </Grid>
    </Grid>
</UserControl>
