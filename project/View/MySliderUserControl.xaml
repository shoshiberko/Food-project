<UserControl x:Class="project.View.MySliderUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:project.View"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="250">

    <Grid x:Name="myGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="205*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>


        <Slider x:Name="slider"  Style="{StaticResource MaterialDesignDiscreteSlider}"
            
            Minimum="0" 
            Maximum="2000"
            IsSnapToTickEnabled="True"
            TickFrequency="1"
            TickPlacement="Both"
              Value="{Binding Path=StringValueProperty}" />
        <TextBlock x:Name="textBlock1" Grid.Column="2" Text="{Binding ElementName=slider, Path=Value}" FontWeight="Bold" FontSize="16" Grid.ColumnSpan="2"/>
    </Grid>

</UserControl>

